<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <!-- =================================================================== -->

    <!-- base画面 -->
    <definition name="base" template="/WEB-INF/jsp/commons/base.jsp">
        <put-attribute name="window_title_key" value="application.title" />
        <put-attribute name="disp_common_js" value="/WEB-INF/js/commons/commons.js" />
        <put-attribute name="disp_common_css" value="/WEB-INF/css/commons/commons.css" />
    </definition>

    <!-- 共通Head JSP -->
    <definition name="commonHeader" template="/WEB-INF/jsp/commons/header.jsp" />
    
    <!-- 共通Foot JSP -->
    <definition name="commonFooter" template="/WEB-INF/jsp/commons/footer.jsp" />
    
    <!-- 共通隐藏項目 JSP -->
    <definition name="commonHiddenArea" template="/WEB-INF/jsp/commons/CommonHiddenArea.jsp" />

    <!-- 用户登录画面 -->
    <definition name="APP0010" extends="base">
        <put-attribute name="disp_title_key" value="APP0010.title" />
        <put-attribute name="disp_js" value="/WEB-INF/js/app001/APP0010.js" />
        <put-attribute name="disp_css" value="/WEB-INF/css/app001/APP0010.css" />
        <put-attribute name="body" value="/WEB-INF/jsp/app001/APP0010.jsp" />
    </definition>
    <!-- =================================================================== -->

</tiles-definitions>
